<h4>Add a promise:</h4>

<%= form_for @promise do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, id: "name"%>
  <%= f.label :person %>
  <%= f.text_field :person, id: "person" %>
  <%= f.submit %>
<% end %>

<h4>Current promises:</h4>
<% @promises.each do |promise| %>
  <div class="promise">
    <p><%= link_to "Name: #{promise.name}", "/promises/#{promise.id}" %></p>
    <p>Person: <%= promise.person %></p>
    <a href="/promises/<%= promise.id %>/edit">Edit</a>
    <%= link_to "Delete", "/promises/#{promise.id}", method: 'delete' %>
  </div>
<% end %>
